squRes = 0
sumOfSquares = 0

def squareOfTheSum(nr): # define a method to calculate the square of the sum
  global squRes # i need the keyword global to use the variable
  for i in range(1, nr+1): # +1 because it starts at 1 without it will be done at 9
    squRes = squRes + i # add all numbers
  return (squRes * squRes) 

def sumOfTheSquares(num): #define a method to calculate the sum of the squares
   global sumOfSquares
   for x in range(1, num+1):
    sumOfSquares = sumOfSquares + (x * x)
   return sumOfSquares

squareOfSum = squareOfTheSum(100)
sumOfSqua = sumOfTheSquares(100)



print(squareOfSum - sumOfSqua)
